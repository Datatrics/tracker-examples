<!-- Datatrics -->
  <script type="text/javascript">
  var _paq = _paq || [];
  (function() {
  var u="https://tr.datatrics.com/";
  _paq.push(["setTrackerUrl", u]);
  _paq.push(["setProjectId", "PROJECTID"]);
  {% if template.name  == 'product' %}
    _paq.push(['setEcommerceView', "{{ product.sku }}", "{{ product.title }}", "", {{ product.price | money_without_currency }} ]);
  {% endif %}
  {% if template.name  == 'collection' %}
    _paq.push(['setEcommerceView', false, false, "{{ collection.title }} "]);
  {% endif %}
  {% if template.name  == 'cart' %}
    {% for line_item in cart.items %}
		  {% if line_item.sku == empty %}
    		_paq.push(['addEcommerceItem', "{{ line_item.product_id }}", "{{ line_item.title }}", "", {{ line_item.line_price | money_without_currency }}, {{ line_item.quantity }}]);
    	{% else %}
    		_paq.push(['addEcommerceItem', "{{ line_item.sku }}", "{{ line_item.title }}", "", {{ line_item.line_price | money_without_currency }}, {{ line_item.quantity }}]);		    	{% endif %}    
  		{% endfor %}
	    _paq.push(['trackEcommerceCartUpdate',{{ cart.total_price | money_without_currency }}]);
  {% endif %}
  {% if customer %}
    _paq.push(["setCustomData", { "profileid" : "{{ customer.id }}", "source": "Shopify" }]);
  {% endif %}
  _paq.push(['trackPageView']);
  _paq.push(["enableLinkTracking"]);
  var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0];g.type="text/javascript";g.defer=true; g.async=true; g.src=u; s.parentNode.insertBefore(g,s);})();
  </script>
<!-- End Datatrics -->
